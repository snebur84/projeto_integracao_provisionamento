# Django settings
DJANGO_SECRET_KEY=change-me-to-a-secure-key
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# MySQL (these are the same variables referenced in the compose file)
MYSQL_DATABASE=provision_db
MYSQL_USER=provision_user
MYSQL_PASSWORD=provision_pass
MYSQL_ROOT_PASSWORD=root_pass
MYSQL_HOST=db
MYSQL_PORT=3306

# MongoDB
MONGODB_HOST=mongo
MONGODB_PORT=27017
MONGODB_DB_NAME=provision_mongo_db
MONGODB_USER=
MONGODB_PASSWORD=

# Admin superuser (optional: used to create a superuser automatically on container start)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=adminpass
DJANGO_SUPERUSER_EMAIL=admin@example.com

# Optional API key enforced by the API endpoints (leave empty to disable)
PROVISION_API_KEY=

# Nginx port mapping (host)
NGINX_HTTP_PORT=80