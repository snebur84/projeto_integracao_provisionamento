{
  "family": "TASK_DEFINITION_FAMILY_PLACEHOLDER",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "ECS_EXECUTION_ROLE_ARN_PLACEHOLDER",
  "taskRoleArn": "ECS_TASK_ROLE_ARN_PLACEHOLDER",
  "containerDefinitions": [
    {
      "name": "provision-app",
      "image": "IMAGE_PLACEHOLDER",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "DJANGO_SETTINGS_MODULE",
          "value": "provision.settings"
        },
        {
          "name": "PYTHONUNBUFFERED",
          "value": "1"
        },
        {
          "name": "DJANGO_ALLOWED_HOSTS",
          "value": "DJANGO_ALLOWED_HOSTS_PLACEHOLDER"
        },
        {
          "name": "DB_NAME",
          "value": "DB_NAME_PLACEHOLDER"
        },
        {
          "name": "DB_USER",
          "value": "DB_USER_PLACEHOLDER"
        },
        {
          "name": "DB_HOST",
          "value": "DB_HOST_PLACEHOLDER"
        },
        {
          "name": "DB_PORT",
          "value": "3306"
        },
        {
          "name": "MONGO_URI",
          "value": "MONGO_URI_PLACEHOLDER"
        },
        {
          "name": "ENVIRONMENT",
          "value": "ENVIRONMENT_PLACEHOLDER"
        }
      ],
      "secrets": [
        {
          "name": "SECRET_KEY",
          "valueFrom": "arn:aws:ssm:AWS_REGION_PLACEHOLDER:AWS_ACCOUNT_ID_PLACEHOLDER:parameter/provision/SECRET_KEY"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:AWS_REGION_PLACEHOLDER:AWS_ACCOUNT_ID_PLACEHOLDER:secret:provision/DB_PASSWORD"
        },
        {
          "name": "PROVISION_API_KEY",
          "valueFrom": "arn:aws:ssm:AWS_REGION_PLACEHOLDER:AWS_ACCOUNT_ID_PLACEHOLDER:parameter/provision/PROVISION_API_KEY"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/provision-app",
          "awslogs-region": "AWS_REGION_PLACEHOLDER",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8000/api/ || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
